---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
---

<Layout>
  <div class="post-grid">
    {
      posts.map((post) => (
        <div id={post.id} class="post-card">
          <a href={`/thechoogs/posts/${post.id}`}>
            <Image
              class="post-image"
              src={post.data.coverImage}
              alt={post.data.title}
              title={post.data.title}
            />
            <h2>{post.data.title}</h2>
          </a>
        </div>
      ))
    }
  </div>
</Layout>

<style>
  .post-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 20px;
    /* margin: 20px; */
    justify-content: center;
    align-items: center;
    min-width: 300px;
  }

  .post-card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    background-color: #f9f9f9;
    aspect-ratio: 3 / 4;
    max-width: 500px;
    place-self: center;
    position: relative;
    width: 100%;
  }

  .post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-card h2 {
    position: absolute;
    bottom: 0;
    color: rgb(255, 255, 255);
    /* outline: 2px solid #000; */
    padding: 20px;
    z-index: 2;
    text-align: center;
    font-size: 4rem;
    height: auto;
    -webkit-text-stroke: 1px rgb(0, 0, 0);
  }
</style>
